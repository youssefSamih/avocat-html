<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    <link href="assets/css/vendor/libs.min.css" rel="stylesheet">
    <link href="assets/css/main.min.css" rel="stylesheet">
  </head>


  <body>
    {% include 'header.twig' with {
      classLi: "nav-item",
      classA: "nav-item__link",
      classIcon: "nav-item__link__ic collapsed",
      classTitle: "nav-item__link__title collapsed",
      items: [
        {
          classActive: "active",
          classIcon: "icon-icon-home",
          content: "Accueil",
          link: "#0",
        },
        {
          classIcon: "icon-icon-presentation",
          content: "Presentation",
          link: "#1",
        },
        {
          classIcon: "icon-icon-expert",
          content: "Expertises",
          link: "#2",
        },
        {
          classIcon: "icon-icon-contact",
          content: "Contact",
          link: "#3",
        },
      ]
    } %}
    <main class="mainActive">
        {% block main %}{% endblock %}
    </main>
    {% include 'footer.twig' with {
      items: [
        {
          classDiv: "footer__el toggle active",
          hasNoChild: true,
        },
        {
          classDiv: "footer__el",
          child: [
            {
              classChild: "footer__el__item toggle itemWithToggle",
              hasNoChild: true,
            },
            {
              classChild: "footer__el__item",
              items: [
                {
                  icon : "rdv",
                  content: "Prendre RDV",
                },
                {
                  icon : "phone",
                  content: "Demander un rappel",
                },
                {
                  icon : "mail",
                  content: "Consulter par Ã©crit",
                },
              ]
            }
          ]
        }
      ]
    } %}

    <script src="assets/js/vendor/libs.js"></script>
    <script src="assets/js/main.min.js"></script>
  </body>

</html>
